generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model User {
  id         String       @id @default(cuid())
  email      String       @unique
  username   String       @unique
  name       String
  password   String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  UserDetail UserDetail[]
}

model UserDetail {
  id        String          @id @default(cuid())
  userId    String
  user      User            @relation(fields: [userId], references: [id])
  bio       String?
  avatar    String?
  education UserEducation[]
  work      UserWork[]
  skills    String[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model UserEducation {
  id           String     @id @default(cuid())
  userDetailId String
  userDetail   UserDetail @relation(fields: [userDetailId], references: [id])
  school       String
  degree       String
  cgpa         String
  present      Boolean
  description  String
  startYear    String
  endYear      String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model UserWork {
  id           String     @id @default(cuid())
  userDetailId String
  userDetail   UserDetail @relation(fields: [userDetailId], references: [id])
  company      String
  position     String
  skills       String[]
  description  String
  present      Boolean
  startYear    String
  endYear      String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}
